.show-result{
  width: 100%;
  position: relative;
}

.show-result-image{
  width: 100vw;
}

.show-result-image-bg{
  position: absolute;
  left: 0;
  top: 0;
  width: 100vw;
}

.operators{
  width: 100vw;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 40rpx;
  box-sizing: border-box;
  font-size: 40rpx;
}

.scroll{
  width: 100%;
  white-space: nowrap;
}

.item-group{
  display: flex;
  flex-direction: row;
  white-space: nowrap;
  padding: 20rpx 20rpx;
}

.item{
  flex-shrink: 0;
  margin-right: 16rpx;
  width: 180rpx;
  height: 240rpx;
  background-color: #f7f7f7;
  padding: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

